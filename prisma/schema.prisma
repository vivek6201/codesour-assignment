generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            Int     @id @default(autoincrement())
  regNo         String  @unique
  name          String
  class         String
  rollNo        Int
  contactNumber String
  status        Boolean @default(true)

  @@unique([rollNo, class]) // Composite unique constraint
}
